<section class="content container-fluid">
    <div :class=" errors.length ? 'alert alert-danger alert-dismissible' : 'hidden'">
        <h4>
            <i :class="'icon fa fa-ban'"></i><span v-text="errors.length ? '错误' : ''"></span>
        </h4>
        <p v-for="error in errors" v-text="'* ' + error">
        </p>
    </div>
    <div class="col-xs-12">
        <div class="box">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>名称</label>
                            <input class="form-control" autocomplete="false" type="text" v-model="el.name" placeholder="名称">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>描述</label>
                            <textarea class="form-control" autocomplete="false" type="text" v-model="el.description" placeholder="描述"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer clearfix">
                <button type="button" class="btn btn-default" @@click="update()">保存</button>
                <a class="btn btn-default" href="/permission">返回</a>
            </div>
        </div>
        <!-- /.box -->
    </div>
</section>
<!-- /.content -->

@section scripts{
    <environment names="Development">
        <script src="~/js/updatePermission.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/updatePermission.min.js" asp-append-version="true"></script>
    </environment>
}