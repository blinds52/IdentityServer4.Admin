<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Create Api Resource
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="/"><i class="fa fa-dashboard"></i> Home</a>
        </li>
        <li class="active">ApiResource</li>
        <li class="active">Create</li>
    </ol>
</section>

<!-- Main content -->
<section class="content container-fluid" id="view">
<div class="col-xs-12">
    <div class="box">
        <div class="box-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Name</label>
                        <input class="form-control" type="text" v-model="el.name" placeholder="Name">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>DisplayName</label>
                        <input class="form-control" type="text" v-model="el.displayName" placeholder="DisplayName">
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label>Enabled</label>
                        <select class="form-control select2" style="width: 100%;">
                            <option selected="selected">True</option>
                            <option>False</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Description</label>
                        <input class="form-control" type="text" v-model="el.description" placeholder="Description">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Scopes</label>
                        <button type="button" data-toggle="modal" data-target="#scope-add" class="btn btn-box-tool">
                            <i class="fa fa-plus text-muted"></i>
                        </button>
                        <table v-show="el.scopes.length>0" class="table table-bordered">
                            <tbody>
                            <tr>
                                <th width="20%">Name</th>
                                <th width="80">Required</th>
                                <th width="80">Emphasize</th>
                                <th width="80">Sidd</th>
                                <th width="20%">Claims</th>
                                <th>Description</th>
                                <th width="70">Remove</th>
                            </tr>
                            <tr v-for="el in el.scopes">
                                <td>
                                    <span v-text="el.name"></span>
                                </td>
                                <td>
                                    <span v-text="el.required"></span>
                                </td>
                                <td>
                                    <span v-text="el.emphasize"></span>
                                </td>
                                <td>
                                    <span v-text="el.showInDiscoveryDocument"></span>
                                </td>
                                <td>
                                    <span v-text="el.userClaims"></span>
                                </td>
                                <td>
                                    <span v-text="el.description"></span>
                                </td>
                                <td>
                                    <button class="btn btn-box-tool" @@click="removeScope(el)">
                                        Remove
                                    </button>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Secrets</label>
                        <button type="button" data-toggle="modal" data-target="#secret-add" class="btn btn-box-tool">
                            <i class="fa fa-plus text-muted"></i>
                        </button>
                        <table v-show="el.secrets.length>0" class="table table-bordered">
                            <tbody>
                            <tr>
                                <th width="20%">Value</th>
                                <th width="240">Type</th>
                                <th width="20%">Expiration</th>
                                <th>Description</th>
                                <th width="70">Remove</th>
                            </tr>
                            <tr v-for="el in el.secrets">
                                <td>
                                    <span v-text="el.value"></span>
                                </td>
                                <td>
                                    <span v-text="el.type"></span>
                                </td>
                                <td>
                                    <span v-text="el.expiration"></span>
                                </td>
                                <td>
                                    <span v-text="el.description"></span>
                                </td>
                                <td>
                                    <button class="btn btn-box-tool" @@click="removeSecret(el)">
                                        Remove
                                    </button>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Claims <small class="text-muted">split with ;</small></label>
                        <input class="form-control" type="text" v-model="el.userClaims" placeholder="Claims">
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix">
            <button type="button" class="btn btn-default" @@click="create()">SUBMIT</button>
            <a class="btn btn-default" href="/apiResource">BACK</a>
        </div>
    </div>
    <!-- /.box -->
</div>
<div class="modal fade" id="scope-add" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content" style="min-width: 700px">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Scope create</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Name</label>
                            <input class="form-control" type="text" v-model="scope.name" placeholder="Name">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>DisplayName</label>
                            <input class="form-control" type="text" v-model="scope.displayName" placeholder="DisplayName">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Description</label>
                            <input class="form-control" type="text" v-model="scope.description" placeholder="Description">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Claims</label>
                            <input class="form-control" type="text" v-model="scope.userClaims" placeholder="Claims">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Enabled</label>
                            <select class="form-control select2" id="scopeRequired" style="width: 100%;">
                                <option>True</option>
                                <option>False</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Emphasize</label>
                            <select class="form-control select2" id="scopeEmphasize" style="width: 100%;">
                                <option>True</option>
                                <option>False</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Sidd</label>
                            <select class="form-control select2" id="scopeSidd" style="width: 100%;">
                                <option>True</option>
                                <option>False</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" @@click="addScope()">Save</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<div class="modal fade" id="secret-add" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content" style="min-width: 700px">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Secret create</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Value</label>
                            <input class="form-control" type="text" v-model="secret.value" placeholder="Name">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Description</label>
                            <input class="form-control" type="text" v-model="scope.description" placeholder="Description">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Value</label>
                            <input class="form-control" type="text" v-model="secret.expiration" placeholder="Expiration">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Description</label>
                            <input class="form-control" type="text" v-model="secret.type" placeholder="Type">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" @@click="addSecret()">Save</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
</section>
<!-- /.content -->


@section scripts{
    <script src="~/js/createApiResource.js" asp-append-version="true"></script>
}