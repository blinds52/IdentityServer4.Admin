<div class="col-xs-12">
    <div :class=" errors.length ? 'row' : 'hidden'" style="margin-bottom: 10px;">
        <span class="pull-left" style="color: red; margin-left: 14px;" v-for="error in errors" v-text="'* ' + error">
        </span>
    </div>
    <div class="box">
        <div class="box-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>标识</label>
                        <input class="form-control" type="text" v-model="el.name" placeholder="标识">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>显示名称</label>
                        <input class="form-control" type="text" v-model="el.displayName" placeholder="显示名称">
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label>启用</label>
                        <select id="enabled" class="form-control select2" style="width: 100%;">
                            <option selected="selected" value="True">是</option>
                            <option value="False">否</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>描述</label>
                        <input class="form-control" type="text" v-model="el.description" placeholder="描述">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Claims<small class="text-muted"> 以 ; 分隔</small></label>
                        <input class="form-control" type="text" v-model="el.userClaims" placeholder="Claims">
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix">
            <button type="button" class="btn btn-default btn-sm" @@click="create()">提交</button>
            <a class="btn btn-default btn-sm" href="/apiResource">取消</a>
        </div>
    </div>
    <!-- /.box -->
</div>

@section scripts{
    <environment names="Development">
        <script src="~/js/createApiResource.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/createApiResource.min.js" asp-append-version="true"></script>
    </environment>
}