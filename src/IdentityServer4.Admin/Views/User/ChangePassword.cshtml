<div class="col-xs-12">
    <div class="box">
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>New password</label>
                        <input class="form-control"  autocomplete="false" type="password" v-model="newPassword" placeholder="New password">
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix">
            <button type="button" class="btn btn-default" @@click="update()">保存</button>
            <a class="btn btn-default" href="/user">返回</a>
        </div>
    </div>
    <!-- /.box -->
</div>

@section scripts{
    <environment names="Development">
        <script src="~/js/changePassword.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/changePassword.min.js" asp-append-version="true"></script>
    </environment>
}