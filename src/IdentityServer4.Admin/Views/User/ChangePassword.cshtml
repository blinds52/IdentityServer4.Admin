<div class="col-xs-12">
    <div :class=" errors.length ? 'row' : 'hidden'" style="margin-bottom: 10px;">
        <span class="pull-left" style="color: red; margin-left: 14px;" v-for="error in errors" v-text="'* ' + error">
        </span>
    </div>
    <div class="box">
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>新密码</label>
                        <input class="form-control" autocomplete="false" type="password" v-model="el.newPassword" placeholder="新密码">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>重复密码</label>
                        <input class="form-control" autocomplete="false" type="password" v-model="el.repeatPassword" placeholder="重复密码">
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix">
            <button type="button" class="btn btn-default" @@click="update()">保存</button>
            <a class="btn btn-default" href="/user">返回</a>
        </div>
    </div>
    <!-- /.box -->
</div>

@section scripts{
    <environment names="Development">
        <script src="~/js/changePassword.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/changePassword.min.js" asp-append-version="true"></script>
    </environment>
}