<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        用户管理
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="/"><i class="fa fa-dashboard"></i>首页</a>
        </li>
        <li class="active">用户管理</li>
    </ol>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <div class="col-xs-12">
        <div class="box" id="view">
            <div class="box-header">
                <div class="box-title">
                    <a class="btn btn-default" href="/user/create">创建用户</a>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>编号</th>
                        <th>名称</th>
                        <th>邮箱</th>
                        <th>角色</th>
                        <th>电话</th>
                        <th>已删除</th>
                        <th>操作</th>
                    </tr>
                    <tr v-for="el in els">
                        <td>
                            <span v-text="el.id"></span>
                        </td>
                        <td>
                            <span v-text="el.userName"></span>
                        </td>
                        <td>
                            <span v-text="el.email"></span>
                        </td>
                        <td>
                            <span v-text="el.roles"></span>
                        </td>
                        <td>
                            <span v-text="el.phoneNumber"></span>
                        </td>
                        <td>
                            <span v-text="el.isDelete"></span>
                        </td>
                        <td>
                            <a class="btn btn-default btn-sm" :href="'/user/' + el.id + '/edit'">编辑</a>
                            <a class="btn btn-default btn-sm" @@click="remove(el.id)" v-show="el.roles != 'admin'">删除</a>
                            <a class="btn btn-default btn-sm" :href="'/user/' + el.id + '/permission'" v-show="el.roles != 'admin'">权限</a>
                            <a class="btn btn-default btn-sm" :href="'/user/' + el.id + '/role'" v-show="el.roles != 'admin'">角色</a>
                            <a class="btn btn-default btn-sm" :href="'/user/' +el.id + '/changepassword'" v-show="el.roles != 'admin'">更新密码</a>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
            <div class="box-footer clearfix">
                <ul id="pagination" v-show="total>size" class="pagination pagination-sm no-margin pull-left">
                </ul>
            </div>
        </div>
        <!-- /.box -->
    </div>
</section>
<!-- /.content -->

@section scripts{
    <environment names="Development">
        <script src="~/js/user.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/user.min.js" asp-append-version="true"></script>
    </environment>
}