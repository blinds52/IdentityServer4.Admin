<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Edit User
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="/"><i class="fa fa-dashboard"></i>Home</a>
        </li>
        <li class="active">
            <a href="/user">User</a>
        </li>
        <li class="active">Edit</li>
    </ol>
</section>

<!-- Main content -->
<section class="content container-fluid" id="view">
<div class="col-xs-12">
    <div class="box">
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Name</label>
                        <input class="form-control" type="text" v-model="el.userName" placeholder="UserName">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" type="text" v-model="el.email" placeholder="Email">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Phone</label>
                        <input class="form-control" type="text" v-model="el.phone" placeholder="Phone">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Password</label>
                        <input class="form-control" type="password" v-model="el.password" placeholder="Password">
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix">
            <button type="button" class="btn btn-default" @@click="update()">UPDATE</button>
            <a class="btn btn-default" href="/user">BACK</a>
        </div>
    </div>
    <!-- /.box -->
</div>
</section>
<!-- /.content -->


@section scripts{
    <script src="~/js/updateUser.js" asp-append-version="true"></script>
}