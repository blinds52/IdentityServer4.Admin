<div class="col-xs-12">
    <div class="box">
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>用户名</label>
                        <input class="form-control" type="text" :readonly="userName == 'admin'" v-model="userName" placeholder="用户名">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>邮箱</label>
                        <input class="form-control" type="text" v-model="email" placeholder="邮箱">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>电话</label>
                        <input class="form-control" type="text" v-model="phoneNumber" placeholder="电话">
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix">
            <button type="button" class="btn btn-default" @@click="update()">保存</button>
            <a class="btn btn-default" href="/user">返回</a>
        </div>
    </div>
    <!-- /.box -->
</div>

@section scripts{
    <environment names="Development">
        <script src="~/js/updateUser.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/updateUser.min.js" asp-append-version="true"></script>
    </environment>
}