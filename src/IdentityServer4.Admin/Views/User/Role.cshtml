<div class="col-xs-12">
    <div class="box">
        <div class="box-header">
            <div class="box-title">
                <a class="btn btn-default btn-sm" @@click="showAddRole()">添加</a>

            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th>角色</th>
                    <th>描述</th>
                    <th>操作</th>
                </tr>
                <tr v-show="els.length==0">
                    <td colspan="3">没有数据</td>
                </tr>
                <tr v-for="el in els">
                    <td>
                        <span v-text="el.name"></span>
                    </td>
                    <td>
                        <span v-text="el.description"></span>
                    </td>

                    <td>
                        <a class="btn btn-default btn-sm" @@click="remove(el.id)">删除</a>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.box -->
</div>
<div class="modal fade" id="add-role" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content" style="min-width: 700px">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">添加角色</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <select class="form-control select2" style="width: 100%;">
                                <option v-for="r in roles" :value="r.name" v-text="r.name"></option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" @@click="addRole()">添加</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section scripts{
    <environment names="Development">
        <script src="~/js/userRole.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/userRole.min.js" asp-append-version="true"></script>
    </environment>
}