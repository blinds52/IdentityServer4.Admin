<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        创建用户
        <small></small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="/"><i class="fa fa-dashboard"></i>首页</a>
        </li>
        <li class="active">
            <a href="/user">用户管理</a>
        </li>
        <li class="active">创建</li>
    </ol>
</section>

<!-- Main content -->
<section class="content container-fluid" id="view">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>用户名</label>
                            <input class="form-control" type="text" v-model="userName" placeholder="用户名">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>邮箱</label>
                            <input class="form-control" type="text" v-model="email" placeholder="邮箱">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>电话</label>
                            <input class="form-control" type="text" v-model="phoneNumber" placeholder="电话">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>密码</label>
                            <input class="form-control" type="password" v-model="password" placeholder="密码">
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer clearfix">
                <button type="button" class="btn btn-default" @@click="create()">提交</button>
                <a class="btn btn-default" href="/user">返回</a>
            </div>
        </div>
        <!-- /.box -->
    </div>
</section>
<!-- /.content -->
<environment names="Development">
    @section scripts{
        <script src="~/js/createUser.js" asp-append-version="true"></script>
    }
</environment>
<environment names="Staging,Production">
    @section scripts{
        <script src="~/js/createUser.min.js" asp-append-version="true"></script>
    }
</environment>