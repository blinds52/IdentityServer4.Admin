@using System.Security.Claims
@using IdentityServer4.Admin.Common
@using IdentityServer4.Extensions
@{
    string name = null;
    bool isAdmin = false;
    string userId = null;
    if (!true.Equals(ViewData["signed-out"]))
    {       
        if (Context.User != null)
        {
            name = Context.User.GetDisplayName();
            isAdmin = Context.User.IsInRole(AdminConsts.AdminName);
            userId = Context.User.FindFirst("sub").Value;
        }
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>IDS4.Admin</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" asp-append-version="true">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/lib/Ionicons/css/ionicons.min.css" asp-append-version="true">
    <!-- SweetAlert -->
    <link rel="stylesheet" href="~/js/sweetalert/sweetalert.css" asp-append-version="true">
    <!-- Select2 -->
    <link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" asp-append-version="true">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/lib/admin-lte/dist/css/AdminLTE.min.css" asp-append-version="true">
    <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
    page. However, you can choose any other skin. Make sure you
    apply the skin class to the body tag so the changes take effect. -->
    <link rel="stylesheet" href="~/lib/admin-lte/dist/css/skins/_all-skins.min.css" asp-append-version="true">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true"/>
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
    <!-- Main Header -->
    <header class="main-header">
        <!-- Logo -->
        <a href="/" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><b>I</b>ds4</span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg">
                <b>IdentityServer4</b>
            </span>
        </a>
        <!-- Header Navbar -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                <span class="sr-only">Toggle navigation</span>
            </a>
            <!-- Navbar Right Menu -->
            <div class="navbar-custom-menu">
                <form id="logoutForm" asp-controller="Account" asp-action="Logout">
                    @Html.AntiForgeryToken();
                    <ul class="nav navbar-nav">
                        <!-- User Account Menu -->
                        <li class="dropdown user user-menu">
                            <!-- Menu Toggle Button -->
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <!-- The user image in the navbar-->
                                <img src="~/lib/admin-lte/dist/img/user2-160x160.jpg" class="user-image" alt="User Image">
                                <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                <span class="hidden-xs">@name</span>
                            </a>

                        </li>
                        <li>
                            @if (!string.IsNullOrWhiteSpace(name))
                            {
                                <a id="btnLogout" href="#">退出</a>
                            }
                        </li>
                    </ul>
                </form>
            </div>
        </nav>
    </header>

    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">

        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">

            <!-- Sidebar Menu -->
            <ul class="sidebar-menu" data-widget="tree">
                <li class="header">HEADER</li>
                <!-- Optionally, you can add icons to the links -->
                @if (isAdmin)
                {
                    <li id="home">
                        <a href="/">
                            <i class="fa fa-area-chart"></i> <span>首页</span>
                        </a>
                    </li>
                }
                <li id="profile">
                    <a href="/user/@userId/profile">
                        <i class="fa fa-book"></i> <span>个人信息</span>
                    </a>
                </li>
                @if (isAdmin)
                {
                    <li id="permission">
                        <a href="/permission">
                            <i class="fa fa-key"></i> <span>权限管理</span>
                        </a>
                    </li>
                    <li id="role">
                        <a href="/role">
                            <i class="fa fa-graduation-cap"></i> <span>角色管理</span>
                        </a>
                    </li>
                    <li id="user">
                        <a href="/user">
                            <i class="fa fa-user"></i> <span>用户管理</span>
                        </a>
                    </li>
                    <li id="apiResource">
                        <a href="/apiResource">
                            <i class="fa fa-book"></i> <span>API 资源管理</span>
                        </a>
                    </li>
                    <li id="client">
                        <a href="/client">
                            <i class="fa fa-desktop"></i> <span>客户端管理</span>
                        </a>
                    </li>
                }
                <li id="grants">
                    <a href="/grants">
                        <i class="fa fa-history"></i> <span>授权记录</span>
                    </a>
                </li>
                <li id="diagnostics">
                    <a href="/diagnostics">
                        <i class="fa fa-flask"></i> <span>诊断</span>
                    </a>
                </li>
            </ul>
            <!-- /.sidebar-menu -->
        </section>
        <!-- /.sidebar -->
    </aside>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        @RenderBody()
    </div>
    <!-- /.content-wrapper -->

    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- To the right -->
        <div class="pull-right hidden-xs">
        </div>
        <!-- Default to the left -->
        <strong>Copyright &copy; 2018 <a href="#">IdentityServer4.Admin</a>.</strong> All rights reserved.
    </footer>
    <!-- /.control-sidebar -->
    <!-- Add the sidebar's background. This div must be placed
    immediately after the control sidebar -->
    <div class="control-sidebar-bg">

    </div>
</div>
<!-- ./wrapper -->

<!-- REQUIRED JS SCRIPTS -->
<environment names="Development">
    <!-- jQuery 3 -->
    <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.js" asp-append-version="true"></script>
    <!-- AdminLTE App -->
    <script src="~/lib/admin-lte/dist/js/adminlte.js" asp-append-version="true"></script>
    <!-- SweetAlert -->
    <script src="~/js/sweetalert/sweetalert.min.js" asp-append-version="true"></script>
    <!-- Select2 -->
    <script src="~/lib/select2/dist/js/select2.full.js" asp-append-version="true"></script>
    <!-- Page -->
    <script src="~/lib/twbs-pagination/jquery.twbsPagination.js" asp-append-version="true"></script>
    <!-- VUE -->
    <script src="~/lib/vue/dist/vue.js" asp-append-version="true"></script>
    <!-- IdentityServer4.Admin -->
    <script src="~/js/app.js" asp-append-version="true"></script>
</environment>
<environment names="Staging,Production">
    <!-- jQuery 3 -->
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <!-- AdminLTE App -->
    <script src="~/lib/admin-lte/dist/js/adminlte.min.js" asp-append-version="true"></script>
    <!-- SweetAlert -->
    <script src="~/js/sweetalert/sweetalert.min.js" asp-append-version="true"></script>
    <!-- Select2 -->
    <script src="~/lib/select2/dist/js/select2.full.min.js" asp-append-version="true"></script>
    <!-- Page -->
    <script src="~/lib/twbs-pagination/jquery.twbsPagination.min.js" asp-append-version="true"></script>
    <!-- VUE -->
    <script src="~/lib/vue/dist/vue.min.js" asp-append-version="true"></script>
    <!-- IdentityServer4.Admin -->
    <script src="~/js/app.min.js" asp-append-version="true"></script>
</environment>

@if (IsSectionDefined("scripts"))
{
    @RenderSection("scripts", true)
}

<!-- Optionally, you can add Slimscroll and FastClick plugins.
Both of these plugins are recommended to enhance the
user experience. -->

</body>
</html>