<div class="col-xs-12">
    <div class="box">
        <div class="box-header">
            <div class="box-title">
                <a class="btn btn-default btn-sm" href="/role/create">创建</a>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th>编号</th>
                    <th>角色</th>
                    <th>描述</th>
                    <th>操作</th>
                </tr>
                <tr v-for="el in els">
                    <td>
                        <span v-text="el.id"></span>
                    </td>
                    <td>
                        <span v-text="el.name"></span>
                    </td>
                    <td>
                        <span v-text="el.description"></span>
                    </td>
                    <td>
                        <a class="btn btn-default btn-sm" :href="'/role/' + el.id + '/edit'" v-show="el.name != 'admin'">编辑</a>
                        <a class="btn btn-default btn-sm" :href="'/role/' + el.id + '/permission'" v-show="el.name != 'admin'">权限</a>
                        <a class="btn btn-default btn-sm" @@click="remove(el.id)" v-show="el.name != 'admin'">删除</a>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix">
            <ul id="pagination" v-show="total>size" class="pagination pagination-sm no-margin pull-left">
            </ul>
        </div>
    </div>
    <!-- /.box -->
</div>

@section scripts{
    <environment names="Development">
        <script src="~/js/role.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/role.min.js" asp-append-version="true"></script>
    </environment>
}